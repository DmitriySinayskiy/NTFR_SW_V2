
#ifndef __TOUCH_H__
#define __TOUCH_H__

#include "allmyheaders.h"
#define MPR_I2C_BUS                  i2c1

void MPR121_setregister(uint16_t regaddress, uint8_t value);
int MPR121_readregister(uint16_t regaddress, uint8_t value);

// MPR121 Register Defines
#define MHD_R	0x2B
#define NHD_R	0x2C
#define	NCL_R 	0x2D
#define	FDL_R	0x2E
#define	MHD_F	0x2F
#define	NHD_F	0x30
#define	NCL_F	0x31
#define	FDL_F	0x32
#define	ELE0_T	0x41
#define	ELE0_R	0x42
#define	ELE1_T	0x43
#define	ELE1_R	0x44
#define	ELE2_T	0x45
#define	ELE2_R	0x46
#define	ELE3_T	0x47
#define	ELE3_R	0x48
#define	ELE4_T	0x49
#define	ELE4_R	0x4A
#define	ELE5_T	0x4B
#define	ELE5_R	0x4C
#define	ELE6_T	0x4D
#define	ELE6_R	0x4E
#define	ELE7_T	0x4F
#define	ELE7_R	0x50
#define	ELE8_T	0x51
#define	ELE8_R	0x52
#define	ELE9_T	0x53
#define	ELE9_R	0x54
#define	ELE10_T	0x55
#define	ELE10_R	0x56
#define	ELE11_T	0x57
#define	ELE11_R	0x58
#define	FIL_CFG	0x5D
#define	ELE_CFG	0x5E
#define GPIO_CTRL0	0x73
#define	GPIO_CTRL1	0x74
#define GPIO_DATA	0x75
#define	GPIO_DIR	0x76
#define	GPIO_EN		0x77
#define	GPIO_SET	0x78
#define	GPIO_CLEAR	0x79
#define	GPIO_TOGGLE	0x7A
#define	ATO_CFG0	0x7B
#define	ATO_CFGU	0x7D
#define	ATO_CFGL	0x7E
#define	ATO_CFGT	0x7F

#define AFE_CFG1	0x5C
#define AFE_CFG2	0x5D

#define	ELE0_1_CHRG	0x6C
#define	ELE2_3_CHRG	0x6D
#define	ELE3_4_CHRG	0x6E
#define	ELE5_6_CHRG	0x7D

// Global Constants
#define TOU_THRESH	0x06
#define	REL_THRESH	0x06


// MY_defines
#define THRESH_EL0 215
#define THRESH_EL1 238
#define THRESH_EL2 235
#define THRESH_EL3 231
#define THRESH_EL4 222
/*
#define THRESH_EL0 159
#define THRESH_EL1 151
#define THRESH_EL2 148
#define THRESH_EL3 151
#define THRESH_EL4 164
*/
#define UP 1
#define DOWN 2
#define NONE 3


#endif //__TOUCH_H__
