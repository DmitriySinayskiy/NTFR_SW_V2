#include "product_selection.h"



int select_product(uint8_t id)
{
	if(but_state_left == BUT_SHORT)
	{
		ST7735_WriteString(50, 2,  product_array[id].name, Font_11x18, ST7735_WHITE, ST7735_BLACK);
		SPI_Flash_to_LCD(product_array[id].addr_block_L, product_array[id].addr_offset_L , 46, 46, 58, 21);
		SPI_Flash_to_LCD(product_array[id-1].addr_block_S, product_array[id-1].addr_offset_S , 36, 36, 5, 25);
		SPI_Flash_to_LCD(product_array[id+1].addr_block_S, product_array[id+1].addr_offset_S , 36, 36, 118, 25);
		but_state_reset();
	}

}
